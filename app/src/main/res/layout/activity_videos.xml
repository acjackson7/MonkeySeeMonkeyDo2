<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_videos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.autumn.monkeyseemonkeydo.VideosActivity">
    android:background = "@color/colorLightBlue"

    <VideoView
        android:id="@+id/videoView5"
        android:layout_width="322dp"
        android:layout_height="181dp"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="27dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/translateAgain"
        android:layout_width="134dp"
        android:layout_height="41dp"
        android:text="@string/translate_again"
        android:textColor = "@color/colorWhite"
        android:background = "@color/colorDarkBlue"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="264dp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/replayBtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Replay"
        android:textColor = "@color/colorWhite"
        android:background = "@color/colorDarkBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/replayBtn"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="150dp"
        android:layout_height="22dp"
        android:text="@string/default_text"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="219dp"
        android:layout_marginTop="13dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/videoView5"
        android:layout_alignStart="@+id/translateAgain" />

</RelativeLayout>
